%html
  %head
    %title
      My Title
  %body{:leftmargin => "0", :marginheight => "0", :marginwidth => "0", :offset => "0", :topmargin => "0", :style => "url(http://qwiqq.me/assets/email/background-pattern.png)"}
    %center
      %table{:border => "0", :cellpadding => "0", :cellspacing => "0", :height => "100%", :width => "100%", :id => "backgroundTable", :style => "color:red;background-image: url(http://qwiqq.me/assets/email/background-pattern.png)"}
        %tr
          %td{:align => "center", :valign => "top"}
            #headerfooterWrapper{:style => "border-top:1px solid #ccc9c3;background-image: url('http://www.qwiqq.me/assets/email/topbar-background.png');background-repeat: repeat-x;"}
              %table#templatePreheader{:border => "0", :cellpadding => "0", :cellspacing => "0", :style => "width: 600px;height: 151px;margin: 0;"}
                %tr
                  %td.preheaderContent{:align => "center", :valign => "top", :style => ""}
                    %table{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "532"}
                      %tr
                        %td{:valign => "top", :width => "143"}
                          #logo{"mc:edit" => "std_preheader_content",:style => "color:#505050;font-family:Arial;font-size:10px;line-height:100%;text-align:left;margin-left: 60px;diplay: block;width: 143px;height: 141px;background-image: url('http://www.qwiqq.me/assets/email/logo-background.gif');-webkit-box-shadow: 0px 0px 2px 2px #e0dfdd;box-shadow: 0px 0px 2px 2px #e0dfdd;"}
                            %a{:href => user_url(@deal.user), :style => ""}
                              %img{:src => image_path(@deal.user.photo(:iphone_profile)), :width => 130, :height => 130, :style => "padding-left:1px; border: 1px solid #e7e7e7; margin-left: 5px; margin-top: 3px;"}
                        %td{:valign => "top"}
                          %div{"mc:edit" => "std_preheader_links"}
                            #info{:style => "margin-left: 20px;margin-top: 25px;"}
                              %span.seller{:style => "color: #808080;text-transform: uppercase;  font-family: Arial, Helvetica, sans-serif;font-weight: normal;font-size: 12px;letter-spacing: 1px;"}
                                Seller
                                %br
                              %span.name{:style => "font-size: 18px;color: #a4a4a4;font-family: Arial, Helvetica, sans-serif;"}
                                = @deal.user.name
                              %span.name{:style => "font-size: 18px;color: #a4a4a4;font-family: Arial, Helvetica, sans-serif;"}
                                = @deal.user.best_name
                            #purchase{:style => "margin-left: 20px;margin-top: 35px;margin-bottom: 7px;"}
                              / %a.buynow{:href => "#", :style => "display: block;width: 157px;height: 40px;float: left;"}
                              /  %img{:src => image_path("email/buynow.gif")}
                              %span.price{:style => "font-family: Arial, Helvetica, sans-serif;font-size: 36px;color: #44423f;font-weight: bold;padding-left: 10px;"} #{@deal.price_as_string}
                    %table#templateContainer{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "532", :style =>"border:1 px solid #DDDDDD;background-color: white;-webkit-border-radius: 25px;border-radius: 25px;margin-top:1px;text-shadow: 2px 2px 1px #c0beb8;filter: dropshadow(color=#c0beb8, offx=2, offy=2);"}
                      %tr
                        %td{:align => "center", :valign => "top"}
                          <table border="0" border-spacing: "0" cellpadding="0" cellspacing="0" width="532" id="templateBody">
                          %tr{:style => "text-shadow: none;"}
                            %td.bodyContent{:valign => "top", :width => "560", :style => "/*@editable*/ color:#505050;/*@editable*/ font-family:Arial;/*@editable*/ font-size:14px;/*@editable*/ line-height:150%;/*@editable*/ text-align:left;"}
                              %table#insideCoupon{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "472", :style => "margin-top: 30px;margin-left: 30px;margin-bottom: 30px;background-color: #f1eee9;"}
                                %tr
                                  %td{:valign => "top", :style => "position: relative;margin:0;padding:0;"}
                                    %img{:align => "top", :src => "http://www.kylecopley.com/novationmobile/qwiqq/content-top.jpg", :style => "display:inline;height:auto;"}
                                    #dashedlines{:style => "border: 3px dashed white;margin: -10px 6px 12px 6px;padding: 12px 16px;min-height: 144px;overflow: auto;"}
                                      #contentleft{:style => "width: 144px;float: left;"}
                                        %a{:href => deal_url(@deal), :style => ""}
                                          %img{:src => @deal.photo.url(:iphone_zoom), :width => "144", :height => "144", :style => "display:inline;height:auto;-moz-border-radius: 20px;border-radius: 20px;-webkit-border-radius: 20px;-khtml-border-radius: 20px;border:4px solid white;margin-left:-4px;"}
                                      #contentright{:style => "float: left;margin-left: 16px;width: 246px;margin-top: 5px;"}
                                        %span#title{:style => "font-size: 24px;font-family: Arial, Helvetica, sans-serif;color: #c4c0bb;"}
                                          = @deal.user.best_name
                                        %span#text{:style => "font-size: 16px;font-weight: normal;color: #808080;display: block;padding-top: 3px;"}
                                          = @deal.name
                                        %span#voucherid{:style => "font-size: 14px;font-style: italic;color: #808080;"} Voucher ID: #{@transaction.paypal_transaction_id.to_s}
                                        -#%a{:href => "#", :onClick => "window.print();return false;"}
                                          %img{:src => image_path("email/print.gif"), :style => "padding-top:8px;display:inline;height:auto;padding-bottom:8px;"}
                                        %br
                                        %br
                                        %span#redeem To redeem your purchase, present this voucher to the seller.
                                    %img{:align => "bottom", :src => image_path("email/content-bottom.jpg"), :style => "clear: both; position:absolute; bottom: 0;display:inline;height:auto;"}
                              %p{:style=>"margin:-20px 27px 8px 27px;text-align:center;"} Want this item shipped? Please contact seller for shipping options and price.      
            %tr
              %td{:align => "center", :valign => "top"}
            %tr
              %td{:style => "text-align:center; vertical-align:top; padding:20px"}
                = image_tag "email/tagline.png"
            %tr
              %td{:style => "text-align:center; padding-bottom: 20px"}
                = link_to "http://www.facebook.com/sharer/sharer.php?u=#{deal_url(@deal)}", :style => "text-decoration: none; border: none"  do
                  = image_tag "email/facebook.png"
                = link_to "http://twitter.com/share?text=#{CGI::escape("I just bought this awesome deal via Qwiqq. #{deal_url(@deal)}")}", :style => "text-decoration: none; border: none"  do
                  = image_tag "email/twitter.png"
                = link_to pinterest_url_for(@deal), :style => "text-decoration: none; border: none" do
                  = image_tag "email/pinterest.png"
                = link_to "mailto:?subject=I made a Qwiqq purchase!&body=I just bought this awesome deal via Qwiqq. #{deal_url(@deal)}", :style => "text-decoration: none; border: none" do
                  = image_tag "email/email.png"
            %tr
              %td{:style => "text-align:center; padding-top:0px"}
                = link_to "https://itunes.apple.com/us/app/qwiqq/id453258253?mt=8", :style => "text-decoration: none; border: none" do
                  = image_tag "email/logo.png", :style => "margin: 0 auto"

