!!!
%html
  %head
    %title
      My Title
    <link href="http://www.qwiqq.me/assets/deal_purchase_email.css" rel="stylesheet" type="text/css">
  %body{:leftmargin => "0", :marginheight => "0", :marginwidth => "0", :offset => "0", :topmargin => "0"}
    %center
      %table{:border => "0", :cellpadding => "0", :cellspacing => "0", :height => "100%", :width => "100%", :id => "backgroundTable", :style => "color:red;background-image: url(http://qwiqq.me/assets/email/background-patter.jpg)"}
        %tr
          %td{:align => "center", :valign => "top"}
            #headerfooterWrapper{:style => "border-top:1px solid #ccc9c3;background-image: url('http://www.kylecopley.com/novationmobile/qwiqq/topbar-background.png');background-repeat: repeat-x;"}
              %table#templatePreheader{:border => "0", :cellpadding => "0", :cellspacing => "0", :style => "width: 600px;height: 151px;margin: 0;"}
                %tr
                  %td.preheaderContent{:align => "center", :valign => "top", :style => ""}
                    %table{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "532"}
                      %tr
                        %td{:valign => "top", :width => "143"}
                          #logo{"mc:edit" => "std_preheader_content",:style => "color:#505050;font-family:Arial;font-size:10px;line-height:100%;text-align:left;margin-left: 60px;diplay: block;width: 143px;height: 141px;background-image: url('http://www.qwiqq.me/assets/email/logo-background.gif');-webkit-box-shadow: 0px 0px 2px 2px #e0dfdd;box-shadow: 0px 0px 2px 2px #e0dfdd;"}
                            %a{:href => "#", :style => ""}
                              %img{:src => image_path('email/logo.png'), :style => "padding-left:1px; border: 1px solid #e7e7e7; margin-left: 5px; margin-top: 3px;"}
                        %td{:valign => "top"}
                          %div{"mc:edit" => "std_preheader_links"}
                            #info
                              %span.seller
                                Seller
                                %br
                              %span.name 
                                = @deal.user.best_name
                            #purchase
                              %a.buynow{:href => "#"}
                                %img{:src => image_path("email/buynow.gif")}
                              %span.price
                                = @deal.price_as_string
                    %table#templateContainer{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "532", :style =>"border:1 px solid #DDDDDD"}
                      %tr
                        %td{:align => "center", :valign => "top"}
                          <table border="0" border-spacing: "0" cellpadding="0" cellspacing="0" width="532" id="templateBody">
                          %tr
                            %td.bodyContent{:valign => "top", :width => "560"}
                              %table#insideCoupon{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "472", :style => "margin-top: 30px;margin-left: 30px;margin-bottom: 30px;background-color: #f1eee9;"}
                                %tr
                                  %td{:style => "position: relative", :valign => "top", :style => "margin:0;padding:0;"}
                                    %img{:align => "top", :src => "http://www.kylecopley.com/novationmobile/qwiqq/content-top.jpg", :style => "display:inline;height:auto;"}
                                    #dashedlines{:style => "border: 3px dashed white;margin: 8px 12px;padding: 12px 16px;min-height: 144px;overflow: auto;"}
                                      #contentleft{:style => "width: 144px;float: left;"}
                                        %img{:src => @deal.photo.url(:iphone_zoom), :width => "144", :height => "144", :style => "display:inline;height:auto;"}
                                      #contentright{:style => "float: left;margin-left: 16px;width: 246px;margin-top: 5px;"}
                                        %span#title{:style => "font-size: 24px;font-family: Arial, Helvetica, sans-serif;color: #c4c0bb;"}
                                          = @deal.user.best_name
                                        %span#text{:style => "font-size: 16px;font-weight: normal;color: #808080;display: block;padding-top: 3px;"}
                                          = @deal.name
                                        %span#voucherid{:style => "font-size: 14px;font-style: italic;color: #808080;"} Voucher ID: 39183
                                        %a{:href => "#"}
                                          %img{:src => "http://www.kylecopley.com/novationmobile/qwiqq/print.gif", :style => "padding-top:8px;display:inline;height:auto;"}
                                    %img{:align => "bottom", :src => image_path("email/content-bottom.jpg"), :style => "clear: both; position: bottom;display:inline;height:auto;"}
                    %tr
                      %td{:align => "center", :valign => "top"}
                  - if @target
                    %tr
                      %td
                        %div{:style => "width:540px; margin:0 auto; color:#404040; font-size:8pt; padding:20px; text-align:center"}
                          #{link_to("Unsubscribe", update_user_notifications_url(@target), :style => "color:#404040")} from all Qwiqq notifications. If you would like to resubscribe you can change notification settings directly from your Qwiqq iPhone App.
                  %tr
                    %td{:style => "text-align:center; vertical-align:top; padding:20px"}
                      = image_tag "email/tagline.png"
                  %tr
                    %td{:style => "text-align:center; padding-bottom: 20px"}
                      = link_to "http://www.facebook.com/sharer/sharer.php?u=http://qwiqq.me", :style => "text-decoration: none; border: none"  do
                        = image_tag "email/facebook.png"
                      &nbsp;
                      = link_to "http://twitter.com/share?text=#{CGI::escape("I'm using @Qwiqq to share what I love to buy. http://qwiqq.me")}", :style => "text-decoration: none; border: none"  do
                        = image_tag "email/twitter.png"
                      &nbsp;
                      = link_to "mailto:?subject=Checkout Qwiqq!&body=http://qwiqq.me", :style => "text-decoration: none; border: none" do
                        = image_tag "email/email.png"