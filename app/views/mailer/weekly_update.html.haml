%div{:style => "text-align:left; font-size:12pt; color:gray; padding: 5px 30px 10px 30px; font-weight: normal ;overflow: auto;"}
%p{:style => "font-size: 15pt;font-weight: bold;text-align: left;color:gray;line-height: 30px;"} Weekly Update
%p{:style => "color: gray;font-size: 12pt;font-weight: normal;text-align: left;line-height:25px"} See what other Qwiqq users are up to!
#posts
  %fieldset{:style => "margin-bottom:10px;margin-top: 25px;padding: 0px; border-top: 1px solid #8C8C8C;border-left: none; border-right:none;border-bottom:none;color: #666666;font-family: Helvetica,Arial; font-size: 24px;font-weight: 300;"}
    %legend{:align => "center", :style => "margin-left:auto;margin-right:auto;display: table;"}
      %span.title{:style => "padding: 0 20px;color: #666666;font-family: Helvetica,Arial; font-size: 24px;font-weight: 300;"} Featured Posts

    %div
      - if @deal.empty?
        %div{:style => "font-size:1.2em; font-weight:300; color:#666; margin:100px auto 300px; line-height:1.6em"}
          Want to see your posts here?
          %br
          = link_to 'Download Qwiqq', 'http://get.qwiqq.me'
          and start Posting!
          %br
      - else
        = render partial: 'deals/mail_grid_deal', collection: @deal



