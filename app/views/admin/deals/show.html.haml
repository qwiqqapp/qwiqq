= link_to 'Back', [:admin, :deals]
%h1= @deal.name.titleize
%p= "Saved by #{@deal.user.name} #{time_ago_in_words @deal.created_at} ago"
= @deal.photo.blank? ? 'No photo' : image_tag(@deal.photo.url(:original))

%h2 Details
%dl
  %dt Category
  %dd= @deal.category.name
  %dt Price
  %dd= number_to_currency @deal.price/10
  %dt Percent
  %dd= number_to_percentage(@deal.percent, :precision => 0)
  
%h2= "#{@deal.comments.size} Comments"
%ul#comments
  - @deal.comments.each do |c|
    %li.comment
      = image_tag c.user.photo.url(:iphone), :class => 'left'
      %p
        = c.user.name        
        %small= "#{time_ago_in_words c.created_at} ago"
        %br
        = c.body
  
  
    
