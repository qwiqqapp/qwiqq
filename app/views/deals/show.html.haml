#fixed-header
  .container
    %a{ :href => root_url }
      %img.logo-small{ :src => "/assets/header-logo.png" }
    .app-store-link-small
      %img.free-small{ :src => "/assets/free-small.png" }
      %img.free-arrow-small{ :src => "/assets/free-arrow-small.png" }
      %a{ :href => "/download" }
        %img{ :src => "/assets/app-store-small.png" }

#post
  .container
    #user
      %a{ :href => user_url(@deal.user) }
        %img.user-photo{ :src => @deal.user.photo.url(:iphone2x), :width => "120", :height => "120" }
        .when
          Posted #{time_ago_in_words(@deal.created_at)} ago by
          %span.username
            #{@deal.user.username}
        .stat 
          .num= @deal.user.deals_count
          posts
        .stat 
          .num= @deal.user.following_count
          following
        .stat 
          .num= @deal.user.followers_count
          followers

    #slider
      %img.arrow-left{ :src => "/assets/arrow-left.png" }
      .details
        %img.post-photo{ :src => @deal.photo(:iphone_zoom_2x), :width => "504", :height => "504" }
        .name= @deal.name
        .price
          %span.dollars-large= price_string(@deal)
          %img.tag{ :src => "/assets/tag-large.png" }

      #location
        #header
          %img.icon{ :src => "/assets/location-icon.png" }
          %h1= @deal.location_name
        #map
          %a{ :href => "http://maps.google.com/?q=#{@deal.lat},#{@deal.lon}" }
            %img{ :src => "http://maps.googleapis.com/maps/api/staticmap?size=550x220&sensor=false&markers=color:red|#{@deal.lat},#{@deal.lon}" }
        
      #buzz
        #header
          %img.icon{ :src => "/assets/buzz-icon.png" }
          %h1 Social Buzz
        #events
          - @events.each_with_index do |event, i|
            .event{ :class => i + 1 == @events.size ? "last" : "" }
              %a{ :href => user_url(event.created_by) }
                %img.user-photo{ :src => event.created_by.photo(:iphone2x), :width => "70", :height => "70" }
              .body
                = event_body(event)

= render "shared/footer"
