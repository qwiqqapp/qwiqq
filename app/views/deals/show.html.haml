#deal-header
  %a.logo{ :href => root_path }
    %img{ :src => "/images/logo.png" }
  %a.download{ :href => download_path }
    %img{ :src => "/images/download-green-mid.png" }

#deal
  #top
    #user
      %img.photo{ :src => @deal.user.photo.url(:iphone), :width => 50, :height => 50 }
      %span.username #{@deal.user.username} posted this #{@deal.age} ago
    #share
      %a.twitter{ :href => "http://twitter.com/home?status=#{CGI::escape(Qwiqq.twitter_message(@deal))}" }
        .button
      %a.facebook{ :href => "http://www.facebook.com/sharer/sharer.php?u=#{deal_url(@deal)}" }
        .button
  #shadow
  #main
    #info
      %img#image{ :src => @deal.photo.url(:iphone_zoom_2x) } 
      #details
        #name= emojify @deal.name
        .price_or_percent
          = price_string @deal
      #map-title
        %img{ :src => "/images/location.png" }
        = @deal.location_name
      #map
        %a{ :href => "http://maps.google.com/?q=#{@deal.lat},#{@deal.lon}" }
          %img{ :src => "http://maps.googleapis.com/maps/api/staticmap?size=385x220&sensor=false&markers=color:red|#{@deal.lat},#{@deal.lon}" }

    - unless @deal.likes.empty?
      #likes
        #count
          %img{ :src => "/images/like.png" }
          #{pluralize(@deal.likes_count, "Like")}
        - @deal.likes.each do |like|
          .like
            %img.user{ :src => like.user.photo.url(:iphone), :width => 50, :height => 50 }

    - unless @deal.comments.empty?
      #comments
        #count
          %img{ :src => "/images/like.png" }
          #{pluralize(@deal.comments_count, "Comment")}
        - @deal.comments.each do |comment|
          .comment
            %img.user{ :src => comment.user.photo.url(:iphone), :width => 50, :height => 50 }
            %span.body 
              "#{emojify comment.body}"
              %span.from
                from #{comment.user.username} #{comment.age} ago

#deal-footer
  %ul#links
    %li= link_to "Home", root_path
    |
    %li= link_to "Get the App", download_path
    |
    %li= link_to "About Qwiqq", about_path
  
