- content_for :title do 
  Qwiqq | #{@deal.name}
  
#post
  .container
    #info
      %a{ :href => user_url(@deal.user) }
        %img.user-photo{ :src => @deal.user.photo.url(:iphone2x), :width => "120", :height => "120" }
        .when
          Posted by
          %br
          %span.username= @deal.user.username
          %br
          #{time_ago_in_words(@deal.created_at)} ago  
            
        .stat 
          .num= @deal.user.deals_count
          posts
        .stat 
          .num= @deal.user.following_count
          following
        .stat 
          .num= @deal.user.followers_count
          followers

    #share
      %a#facebook{ :href => "http://www.facebook.com/sharer/sharer.php?u=#{deal_url(@deal)}", :target => "_blank" }
      %a#twitter{ :href => "http://twitter.com/home?status=#{CGI::escape(build_share_deal_message(@deal))}", :target => "_blank" }

    #slider
      %img.arrow-left{ :src => image_path("arrow-left.png") }
      .post
        .details
          %img.post-photo{ :src => @deal.photo(:iphone_zoom_2x), :width => "504", :height => "504" }
          .clearfix
            .name= @deal.name
            .price
              %span.dollars-large= price_string(@deal)

      #location
        #header
          %img.icon{ :src => image_path("location-icon.png") }
          %h1= @deal.venue_or_location_name
        #map
          %a{ :href => "http://maps.google.com/?q=#{@deal.lat},#{@deal.lon}" }
            %img{ :src => "http://maps.googleapis.com/maps/api/staticmap?size=550x220&sensor=false&markers=color:red|#{@deal.lat},#{@deal.lon}" }
        
      #buzz
        #header
          %img.icon{ :src => image_path("buzz-icon.png") }
          %h1 Social buzz
          .stats
            %span.stat
              %img.icon.love{ :src => image_path("large-love-icon.png") }
              = @deal.likes_count
            %span.stat
              %img.icon.share{ :src => image_path("large-share-icon.png") }
              = @deal.shares_count

        #events
          - if @events.empty?
            .empty
              The latest buzz on this post will show up here
          - @events.each_with_index do |event, i|
            .event{ :class => i + 1 == @events.size ? "last" : "" }
              %a{ :href => user_url(event.created_by) }
                %img.user-photo{ :src => event.created_by.photo(:iphone2x), :width => "80", :height => "80" }

              .body
                = event_body(event)
                %img.icon{ :src => image_path(event_icon(event)) }